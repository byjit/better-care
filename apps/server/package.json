    "ai": "^5.0.9",
    "better-auth": "^1.3.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.3",
    "express": "^5.1.0",
